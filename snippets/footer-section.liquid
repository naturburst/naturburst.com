<footer class="site-footer" role="contentinfo">
  <div class="wave-divider">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 100">
      <path
        fill="#FFF"
        fill-opacity="1"
        d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,0L1360,0C1280,0,1120,0,960,0C800,0,640,0,480,0C320,0,160,0,80,0L0,0Z"
      ></path>
    </svg>
  </div>

  <div class="page-width">
    <div class="footer-content">
      <div class="logo-section">
        <h3>Nature<span>Burst</span></h3>
        <p>Premium freeze-dried fruits with all the natural goodness. No additives, no preservatives - just pure fruit bliss that keeps all the nutrition intact.</p>

        <div class="contact-info">
          <div class="contact-item">
            {% render 'icon-email' %}
            <span>natureburst.shop@gmail.com</span>
          </div>
          <div class="contact-item">
            {% render 'icon-phone-alt' %}
            <span>+91 90984 04225</span>
          </div>
        </div>

        <div class="social-icons">
          <a href="https://www.instagram.com/natureburst.shop" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            {% render 'icon-instagram' %}
          </a>
          <a href="https://www.facebook.com/profile.php?id=61574435489769" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            {% render 'icon-facebook' %}
          </a>
        </div>
      </div>

      <div class="links-section">
        <div class="link-group">
          <h4>Quick Links</h4>
          <ul>
            {% for link in linklists.footer.links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </div>

        <div class="link-group location-group">
          <h4>Visit Us</h4>
          <address class="footer-address">
            Prestige West Woods, Magadi Road, Gopalpura, Bengaluru, Karnataka 560023
          </address>


            href="https://www.google.com/maps/place/PRESTIGE+WEST+WOODS,+Gopalapura,+Binnipete,+Bengaluru,+Karnataka+560023,+India/@12.9776301,77.5630992,18z/"
            target="_blank"
            rel="noopener noreferrer"
            class="directions-btn"
          >
            <div class="map-indicator">
              {% render 'icon-map' %} Get Directions
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="bottom-section">
      <div class="payment-methods">
        <span class="visually-hidden">Payment methods</span>
        <ul class="payment-icons list-unstyled">
          {% for type in shop.enabled_payment_types %}
            <li class="payment-icon">
              {{ type | payment_type_svg_tag: class: 'icon' }}
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="footer__copyright">
        <small class="copyright__content">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</small>
      </div>
    </div>
  </div>
</footer>

<style>
