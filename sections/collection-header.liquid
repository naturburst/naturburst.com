<div class="collection-header section">
  <div class="page-width">
    <div class="collection-header__content">
      <h1 class="collection-header__title">
        {{ collection.title | escape }}
      </h1>

      {% if section.settings.show_collection_description and collection.description != blank %}
        <div class="collection-header__description rte">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_collection_image and collection.image %}
      <div class="collection-header__image-container">
        <img
          srcset="
            {%- if collection.image.width >= 375 -%}{{ collection.image | image_url: width: 375 }} 375w,{%- endif -%}
            {%- if collection.image.width >= 750 -%}{{ collection.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if collection.image.width >= 1100 -%}{{ collection.image | image_url: width: 1100 }} 1100w,{%- endif -%}
            {%- if collection.image.width >= 1500 -%}{{ collection.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {%- if collection.image.width >= 1780 -%}{{ collection.image | image_url: width: 1780 }} 1780w,{%- endif -%}
            {{ collection.image | image_url }} {{ collection.image.width }}w
          "
          src="{{ collection.image | image_url: width: 1100 }}"
          sizes="(min-width: 1100px) 1100px, 100vw"
          alt="{{ collection.title | escape }}"
          width="{{ collection.image.width }}"
          height="{{ collection.image.height }}"
          class="collection-header__image"
        >
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collection header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": true,
      "label": "Show collection image"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "Show collection description"
    }
  ],
  "presets": [
    {
      "name": "Collection header",
      "category": "Collection"
    }
  ]
}
{% endschema %}

<style>
.collection-header {
  padding: 2rem 0;
  background: var(--color-background-light);
}

.collection-header__content {
  text-align: center;
  max-width: 800px;
  margin: 0 auto 2rem;
}

.collection-header__title {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  color: var(--color-headings);
  font-weight: 700;
}

.collection-header__description {
  color: var(--color-text);
  font-size: 1.1rem;
  line-height: 1.6;
}

.collection-header__image-container {
  width: 100%;
  max-width: 1100px;
  margin: 0 auto;
  text-align: center;
  overflow: hidden;
  border-radius: var(--radius-base);
}

.collection-header__image {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: var(--radius-base);
  transition: transform 0.3s ease;
}

.collection-header__image:hover {
  transform: scale(1.02);
}

@media (max-width: 767px) {
  .collection-header {
    padding: 1.5rem 0;
  }

  .collection-header__title {
    font-size: 1.8rem;
  }

  .collection-header__description {
    font-size: 1rem;
  }
}
</style>