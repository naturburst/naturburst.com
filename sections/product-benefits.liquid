<div class="product-benefits section">
  <div class="page-width">
    <div class="header-container">
      <h2>{{ section.settings.title | escape }}</h2>
      <p>{{ section.settings.description }}</p>
    </div>

    <div class="benefits-grid">
      <div class="benefit-card">
        <div class="benefit-icon natural"></div>
        <h3>{{ section.settings.benefit_1_title }}</h3>
        <p>{{ section.settings.benefit_1_text }}</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-icon nutrients"></div>
        <h3>{{ section.settings.benefit_2_title }}</h3>
        <p>{{ section.settings.benefit_2_text }}</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-icon lifestyle"></div>
        <h3>{{ section.settings.benefit_3_title }}</h3>
        <p>{{ section.settings.benefit_3_text }}</p>
      </div>
    </div>

    <div class="key-benefits">
      {% for block in section.blocks %}
        {% if block.type == 'benefit_point' %}
          <div class="benefit">
            <span class="check-icon">{% render 'icon-check' %}</span>
            <span>{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}

      <!-- Default benefits if no blocks are added -->
      {% if section.blocks.size == 0 %}
        <div class="benefit">
          <span class="check-icon">{% render 'icon-check' %}</span>
          <span>100% Natural Ingredients</span>
        </div>
        <div class="benefit">
          <span class="check-icon">{% render 'icon-check' %}</span>
          <span>No Added Sugar</span>
        </div>
        <div class="benefit">
          <span class="check-icon">{% render 'icon-check' %}</span>
          <span>Rich in Vitamins</span>
        </div>
        <div class="benefit">
          <span class="check-icon">{% render 'icon-check' %}</span>
          <span>Extended Shelf Life</span>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Benefits",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why NatureBurst Is Different"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our special freeze-drying process locks in nutrition, flavor, and crunch without additives or preservatives. Unlike traditional methods, we preserve up to 97% of nutrients while creating a satisfying crunch that's perfect for snacking or adding to your favorite recipes."
    },
    {
      "type": "header",
      "content": "Benefit Card 1"
    },
    {
      "type": "text",
      "id": "benefit_1_title",
      "label": "Title",
      "default": "100% Natural"
    },
    {
      "type": "textarea",
      "id": "benefit_1_text",
      "label": "Text",
      "default": "Our freeze-dried fruits contain absolutely no additives, preservatives, or added sugars. Just pure fruit, exactly as nature intended."
    },
    {
      "type": "header",
      "content": "Benefit Card 2"
    },
    {
      "type": "text",
      "id": "benefit_2_title",
      "label": "Title",
      "default": "Nutrient-Rich"
    },
    {
      "type": "textarea",
      "id": "benefit_2_text",
      "label": "Text",
      "default": "Our gentle freeze-drying process preserves up to 97% of the nutrients found in fresh fruit, ensuring you get all the vitamins and antioxidants."
    },
    {
      "type": "header",
      "content": "Benefit Card 3"
    },
    {
      "type": "text",
      "id": "benefit_3_title",
      "label": "Title",
      "default": "Lifestyle Friendly"
    },
    {
      "type": "textarea",
      "id": "benefit_3_text",
      "label": "Text",
      "default": "Whether you follow a vegan, paleo, keto, or gluten-free diet, our products fit perfectly into your healthy lifestyle choices."
    }
  ],
  "blocks": [
    {
      "type": "benefit_point",
      "name": "Benefit Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Benefit Text",
          "default": "Benefit point"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Benefits",
      "category": "Text",
      "blocks": [
        {
          "type": "benefit_point",
          "settings": {
            "text": "100% Natural Ingredients"
          }
        },
        {
          "type": "benefit_point",
          "settings": {
            "text": "No Added Sugar"
          }
        },
        {
          "type": "benefit_point",
          "settings": {
            "text": "Rich in Vitamins"
          }
        },
        {
          "type": "benefit_point",
          "settings": {
            "text": "Extended Shelf Life"
          }
        }
      ]
    }
  ]
}
{% endschema %}

