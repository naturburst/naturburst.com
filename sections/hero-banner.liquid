<div class="hero-banner">
  <div class="hero-container">
    <div class="hero-content">
      {% if section.settings.show_buttons %}
        <div class="hero-buttons">
          <a href="{{ routes.collections_url }}" class="button button--primary">
            {% render 'icon-cart' %}
            {{ section.settings.shop_button_text | escape }}
          </a>

          {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_url != blank %}
            <a href="{{ section.settings.secondary_button_url }}" class="button button--secondary">
              {{ section.settings.secondary_button_text | escape }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "checkbox",
      "id": "show_buttons",
      "label": "Show buttons",
      "default": true
    },
    {
      "type": "text",
      "id": "shop_button_text",
      "label": "Shop Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "HOW TO USE"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}

<style>
.hero-banner {
  position: relative;
  width: 100%;
  overflow: hidden;
  padding: 0;
  margin-bottom: 2rem;
}

.hero-container {
  {% if section.settings.image %}
    background-image: url('{{ section.settings.image | img_url: 'master' }}');
  {% endif %}
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center top;
  min-height: 600px;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 2rem 1rem;
  border-bottom: 3px solid #f7f7f7;
}

.hero-content {
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  padding-bottom: 2rem;
}

.hero-buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
}

/* New button styles */
.button {
  display: inline-block;
  padding: 12px 24px;
  background-color: #3f704d; /* Darker green */
  color: white;
  text-transform: uppercase;
  font-weight: bold;
  border-radius: 30px;
  transition: all 0.3s ease;
  border: none;
  text-decoration: none;
  font-family: var(--font-heading);
  font-size: 1rem;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.button:hover {
  background-color: #2b4f35;
  transform: translateY(-2px);
  box-shadow: 0 6px 15px rgba(0,0,0,0.25);
}

.button--primary {
  background-color: #3f704d;
  display: flex;
  align-items: center;
  gap: 0.7rem;
}

.button--secondary {
  background-color: white;
  color: #3f704d;
  border: 2px solid #3f704d;
}

.button--secondary:hover {
  background-color: #3f704d;
  color: white;
}

.button .icon {
  font-size: 1.1rem;
}

/* Mobile responsive adjustments */
@media (max-width: 767px) {
  .hero-container {
    {% if section.settings.mobile_image %}
      background-image: url('{{ section.settings.mobile_image | img_url: 'master' }}');
    {% endif %}
    min-height: 500px;
    background-size: cover;
    background-position: center;
    align-items: center;
  }

  .hero-content {
    padding-bottom: 0;
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .hero-buttons {
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 280px;
    gap: 1rem;
  }

  .button {
    width: 100%;
    justify-content: center;
    padding: 0.75rem 1rem;
  }
}

/* Small mobile devices */
@media (max-width: 480px) {
  .hero-container {
    min-height: 420px;
  }
}
</style>

<script>
// Optimized image preloading for mobile devices
document.addEventListener('DOMContentLoaded', function() {
  // Only preload when on mobile to save bandwidth
  if (window.innerWidth <= 767) {
    const mobileImageUrl = '{{ section.settings.mobile_image | img_url: 'master' }}';
    if (mobileImageUrl) {
      const img = new Image();
      img.src = mobileImageUrl;
    }
  }
});
</script>