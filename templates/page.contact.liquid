<div class="page-contact">
  {% section 'contact-form' %}
  
  {% if section.settings.show_map %}
  <div class="map-section">
    <div class="page-width">
      <div class="map-container">
        <iframe
          src="{{ section.settings.map_url | replace: '/place/', '/embed/place/' | split: '/@' | first }}/@12.9775109,77.5631957,17z/data=!3m1!4b1!4m5!3m4!1s0x3bae161d4bde1ac1:0xd0454380d2d678cd!8m2!3d12.9775109!4d77.5631957"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </div>
  {% endif %}
  
  {% section 'newsletter' %}
</div>

<style>
  .page-contact {
    padding-bottom: 4rem;
  }
  
  .map-section {
    margin: 3rem 0;
  }
  
  .map-container {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
</style>