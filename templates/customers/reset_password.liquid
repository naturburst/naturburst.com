{% comment %}
  Password reset page
{% endcomment %}

<div class="customer-reset-password page-width section-padding">
  <div class="reset-password-container">
    <h1>{{ 'customer.reset_password.title' | t }}</h1>
    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {%- form 'reset_customer_password', novalidate: 'novalidate' -%}
      {%- if form.errors -%}
        <div class="form-message form-message--error">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div class="form-field">
        <label for="CustomerPassword">{{ 'customer.reset_password.password' | t }}</label>
        <input
          type="password"
          name="customer[password]"
          id="CustomerPassword"
          autocomplete="new-password"
          placeholder="{{ 'customer.reset_password.password' | t }}"
        >
      </div>

      <div class="form-field">
        <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input
          type="password"
          name="customer[password_confirmation]"
          id="PasswordConfirmation"
          autocomplete="new-password"
          placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
        >
      </div>

      <button type="submit" class="btn btn--primary">
        {{ 'customer.reset_password.submit' | t }}
      </button>
    {%- endform -%}
  </div>
</div>

<style>
  .customer-reset-password {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .reset-password-container {
    background: white;
    padding: 2rem;
    border-radius: var(--radius-base);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 500px;
    text-align: center;
  }

  h1 {
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 2rem;
    color: var(--color-text-light);
  }

  .form-field {
    margin-bottom: 1.5rem;
    text-align: left;
  }

  .form-field label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .form-field input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-small);
  }

  .form-message {
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: var(--radius-small);
    text-align: left;
  }

  .form-message--error {
    background-color: #FEF2F2;
    color: #B91C1C;
  }

  .btn {
    min-width: 150px;
  }
</style>