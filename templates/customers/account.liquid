{% comment %}
  Customer account dashboard
{% endcomment %}

<div class="customer-account page-width section-padding">
  <div class="account-header">
    <h1>{{ 'customer.account.title' | t }}</h1>
    <a href="{{ routes.account_logout_url }}" class="btn btn--secondary">
      {{ 'customer.account.log_out' | t }}
    </a>
  </div>

  <div class="account-grid">
    <!-- Order history section -->
    <div class="account-section">
      <div class="account-section__header">
        <h2>{{ 'customer.orders.title' | t }}</h2>
      </div>

      <div class="orders-list">
        {% if customer.orders.size > 0 %}
          <table class="orders-table">
            <thead>
              <tr>
                <th>{{ 'customer.orders.order_number' | t }}</th>
                <th>{{ 'customer.orders.date' | t }}</th>
                <th>{{ 'customer.orders.payment_status' | t }}</th>
                <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
                <th>{{ 'customer.orders.total' | t }}</th>
              </tr>
            </thead>
            <tbody>
              {% for order in customer.orders %}
                <tr>
                  <td>
                    <a href="{{ order.customer_url }}">{{ order.name }}</a>
                  </td>
                  <td>{{ order.created_at | date: "%b %d, %Y" }}</td>
                  <td>{{ order.financial_status_label }}</td>
                  <td>{{ order.fulfillment_status_label }}</td>
                  <td>{{ order.total_price | money }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% else %}
          <p>{{ 'customer.orders.none' | t }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="btn">
            {{ 'general.continue_shopping' | t }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Account details section -->
    <div class="account-section">
      <div class="account-section__header">
        <h2>{{ 'customer.account.details' | t }}</h2>
      </div>

      <div class="account-details">
        <div class="account-detail">
          <h3>{{ 'customer.account.name' | t }}</h3>
          <p>{{ customer.name }}</p>
        </div>

        <div class="account-detail">
          <h3>{{ 'customer.orders.email' | t }}</h3>
          <p>{{ customer.email }}</p>
        </div>

        <div class="account-detail">
          <h3>{{ 'customer.addresses.default_address' | t }}</h3>
          {% if customer.default_address %}
            <p>
              {{ customer.default_address | format_address }}
            </p>
          {% else %}
            <p>{{ 'customer.addresses.no_addresses' | t }}</p>
          {% endif %}
        </div>

        <div class="account-actions">
          <a href="{{ routes.account_addresses_url }}" class="btn btn--secondary">
            {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .customer-account {
    max-width: 1200px;
  }

  .account-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .account-grid {
    display: grid;
    gap: 2rem;
  }

  .account-section {
    background: white;
    border-radius: var(--radius-base);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .account-section__header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .account-section__header h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  .orders-list {
    padding: 1.5rem;
  }

  .orders-table {
    width: 100%;
    border-collapse: collapse;
  }

  .orders-table th,
  .orders-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .orders-table th {
    font-weight: 600;
    color: var(--color-headings);
  }

  .account-details {
    padding: 1.5rem;
  }

  .account-detail {
    margin-bottom: 1.5rem;
  }

  .account-detail h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-light);
  }

  .account-detail p {
    margin: 0;
    font-weight: 500;
  }

  .account-actions {
    margin-top: 2rem;
  }

  @media (min-width: 768px) {
    .account-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  @media (max-width: 767px) {
    .account-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .orders-table {
      display: block;
      overflow-x: auto;
    }
  }
</style>